<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonLogin" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardViewButton">
        <item name="cardBackgroundColor">@color/queen_pink</item>
        <item name="android:text">@color/roxo_escuro</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
        <item name="android:clickable">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>
</resources>